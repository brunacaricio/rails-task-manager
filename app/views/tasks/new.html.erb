<div class="container mt-3">
  <h2>Create a new task</h2>
  <div class="d-block">
    <%= form_with model: @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <%= f.submit %>
    <% end %>
  </div>

  <p class="mt-4"><%= link_to 'Go back to your tasks', tasks_path %></p>
</div>
